{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Flutter Analyze",
			"type": "shell",
			"command": "flutter",
			"args": [
				"analyze"
			],
			"isBackground": false,
			"problemMatcher": [
				"$dart"
			],
			"group": "build"
		},
		{
			"label": "flutter: analyze",
			"type": "shell",
			"command": "flutter",
			"args": [
				"analyze"
			],
			"isBackground": false,
			"problemMatcher": [
				"$dart"
			],
			"group": "build"
		},
		{
			"label": "Flutter: Pub get + run app (device auto)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-Command",
				"if (Test-Path pubspec.yaml) { flutter pub get }; flutter devices; flutter run -d emulator-5554"
			]
		}
	]
}